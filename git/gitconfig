[alias]
	a    = add
	ap   = add --patch
	b    = branch --verbose
	ba   = branch --all
	bc   = branch --contains
	br   = branch --remote
	ci   = commit
	cia  = commit --amend
	co   = checkout
	c-   = checkout --
	cp   = cherry-pick
	d    = diff
	dc   = diff --cached
	g    = grep -n
	gi   = grep -ni
	git  = !git $1
	ig   = ls-files --others -i --exclude-standard
	l    = log --graph --stat --decorate
	lod  = log --oneline --decorate
	lodg = log --oneline --decorate --graph
	m    = merge
	rh   = reset HEAD
	s    = status --short --branch
	up   = "!git remote update -p; git merge --ff-only @{u}"

[core]
	autocrlf = false
	whitespace = trailing-space,space-before-tab

[clean]
	requireForce = false

[color]
	branch   = true
	diff     = true
	decorate = true
	grep     = true
	pager    = true
	status   = true

[user]
	name = Henry Smith
	email = henry@henrysmith.org
