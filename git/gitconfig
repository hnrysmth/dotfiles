
[alias]
	a   = add
	ap  = add --patch
	b   = branch --verbose
	bc  = branch --contains
	br  = branch --remote
	ci  = commit
	co  = checkout
	c-  = checkout --
	cp  = cherry-pick
	d   = diff
	dc  = diff --cached
	dw  = diff --color-words
	f   = fetch
	fa  = fetch --append
	g   = grep -n
	gi  = grep -ni
	ig  = ls-files --others -i --exclude-standard
	l   = log --graph --stat --decorate
	la  = log --graph --stat --decorate --all
	m   = merge
	rh  = reset HEAD
	ri  = rebase --interactive @{u}
	s   = status --short --branch
	fff = flow feature finish
	ffs = flow feature start
	fhf = flow hotfix finish
	fhs = flow hotfix start
	frf = flow release finish
	frs = flow release start
	lod = log --oneline --decorate
	pom = push origin master
	pgm = push github master
	phm = push heroku master

	dr = "!f() { git status --porcelain | grep '^ *D ' | awk '{print $2}' | xargs git rm; }; f"
	mc = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; git merge $1/$B; }; f"

	mcg = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; git merge github/$B; }; f"
	mco = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; git merge origin/$B; }; f"

	ploc = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; echo "Pulling from $B..."; git pull origin $B; }; f"
	psoc = "!f() { B=`git branch | grep '^\\*' | awk '{print $2}'`; echo "Pushing to $B..."; git push origin $B; }; f"

	undelete = !git checkout `git rev-list -n 1 HEAD -- $1`^ -- $1
	tumbleweed = "!f() { git for-each-ref --sort=-committerdate refs --format='%(committerdate:short) %(refname:short) %(authoremail)' | column -tn | tac; }; f"

[clean]
	requireForce = false

[color]
	branch   = true
	diff     = true
	decorate = true
	grep     = true
	pager    = true
	status   = true

[color "branch"]
	current = green reverse

[color "decorate"]
	commit       = cyan
	branch       = magenta
	remotebranch = green bold
	tag          = red
	stash        = green
	HEAD         = cyan bold

[color "diff"]
	frag       = green bold
	meta       = yellow
	new        = green
	old        = red
	whitespace = white reverse

[color "grep"]
	filename   = blue
	linenumber = green
	match      = yellow
	separator  = cyan

[color "status"]
	added     = blue bold
	changed   = blue bold
	untracked = red bold

[core]
	autocrlf = false
	whitespace = trailing-space,space-before-tab

[user]
	name   = Henry Smith
	email  = henry@henrysmith.org
	editor = vim

